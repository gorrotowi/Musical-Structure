<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gorrotowi.musicalstructure">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ListLibraryActivity"
            android:theme="@style/AppThemeLibrary" />
        <activity
            android:name=".ListArtistActivity"
            android:theme="@style/AppThemeArtist" />
        <activity
            android:name=".ListAlbumActivity"
            android:theme="@style/AppThemeAlbums" />
        <activity
            android:name=".ListSongActivity"
            android:theme="@style/AppThemeSongs" />
        <activity
            android:name=".ArtistDetailActivity"
            android:theme="@style/AppThemeArtist" />
    </application>

</manifest>